//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                != item.title
            if item.tags
                for tag in item.tags.toArray()
                    a(href=url_for(tag.path))=  '#' + tag.name
            +postInfo(item)
            .post-content
                != item.content
           